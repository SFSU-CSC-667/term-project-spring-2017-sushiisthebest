extends layout
block content
    div
        table
            thead
                tr: th Game
                    th playersCount
                    th Description
                    th Join A Game
            tbody
            each game in games
                tr: td=game.name
                    td=game.playercount + "/5"
                    td= 'some description'
                    td
                        button.btnjoin(id=game.id) JOIN
    div.modal-content(style="display:none")
        span.close &times
        p 'Game is no longer available
    div
        button(type="submit" onclick="location.href='/games/create'" value='Next') Create a Game

    script(src='/javascripts/jquery-3.2.1.js')
    script(src='/javascripts/joinbtn.js')