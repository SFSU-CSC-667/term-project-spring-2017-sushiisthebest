extends login-layout
block content
	.grid-1
		.col
			.login.spacer

	.grid-6
		.col
			.login

		.col-8
			.login.box

				form#login.signup-form(method="post" action="/users/login")
					h1.login-text LOGIN
					.grid-6
						.col
							.login

						.col-8
							.login
								h2 UserName
								input#username(type='text', name='username')
						.col
							.login

					.grid-6
						.col
							.login

						.col-8
							.login
								h2 Password
								input#password(type='text', name='password')
						.col
							.login

					.grid-1
						.col
							.rotate.wiggler
								.login-button
									button(type="submit") SIGN IN
block foot
	script(src='/javascripts/jquery-3.2.1.js')
	script(src='/javascripts/login.js')